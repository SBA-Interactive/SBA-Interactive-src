---
import Layout from '../layouts/layout.astro';
import Hero from '../components/hero.svelte';
import HelloTicker from '../components/HelloTicker.svelte';
import Features from '../components/Features.svelte';
import Services from '../components/Services.svelte';
import PortfolioShowcase from '../components/PortfolioShowcase.svelte';
import GraphicsSection from '../components/GraphicsSection.svelte';
import Pricing from '../components/Pricing.svelte';
import Support from '../components/Support.svelte';
import Contact from '../components/Contact.svelte';
import SectionDivider from '../components/SectionDivider.svelte';
---

<Layout 
	title="SBA Interactive | High-Performance Web Development & Premium WordPress Solutions"
	description="Expert web engineering. We build high-conversion landings, scalable SaaS platforms, and premium WordPress sites with perfect 100/100 performance scores."
>
	<Hero client:load />
	<HelloTicker client:visible />
	<Features client:visible />
	<SectionDivider color="violet" bgClass="bg-slate-50 dark:bg-slate-950" />
	
	<Services client:visible />
	<SectionDivider color="orange" bgClass="bg-slate-50 dark:bg-surface-950" />
	
	<PortfolioShowcase client:visible />
	<SectionDivider color="rose" bgClass="bg-white dark:bg-surface-950" />
	
	<GraphicsSection client:visible />
	<SectionDivider color="pink" bgClass="bg-white dark:bg-slate-950" />
	
	<Pricing client:visible />
	<SectionDivider color="cyan" bgClass="bg-white dark:bg-slate-950" />
	
	<Support client:visible />
	<SectionDivider color="green" bgClass="bg-slate-50 dark:bg-surface-900" />
	
	<Contact client:visible />
</Layout>